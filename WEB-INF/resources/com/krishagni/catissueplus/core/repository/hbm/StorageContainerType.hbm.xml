<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping auto-import="false">
  <class name="com.krishagni.catissueplus.core.administrative.domain.StorageContainerType" 
    table="OS_STORAGE_CONTAINER_TYPES">

    <id name="id" column="IDENTIFIER">
      <generator class="native">
        <param name="sequence">OS_STORAGE_CONTAINER_TYPES_SEQ</param>
      </generator>
    </id>

    <property name="name" column="NAME"/>

    <property name="temperature" column="TEMPERATURE"/>

    <property name="noOfColumns" column="NO_OF_COLS"/>

    <property name="noOfRows" column="NO_OF_ROWS"/>

    <property name="columnLabelingScheme" column="COLUMN_LABELING_SCHEME"/>

    <property name="rowLabelingScheme" column="ROW_LABELING_SCHEME"/>

    <property name="storeSpecimenEnabled" column="STORE_SPECIMENS"/>

    <property name="abbreviation" column="ABBREVIATION"/>

    <many-to-one
      name="canHold" 
      class="com.krishagni.catissueplus.core.administrative.domain.StorageContainerType"
      column="CAN_HOLD"/>
     
    <query name="getStorageContainerTypesByName">
      from
        com.krishagni.catissueplus.core.administrative.domain.StorageContainerType storageContainerType
      where
        storageContainerType.name = :name 
    </query>
  </class>
</hibernate-mapping>
