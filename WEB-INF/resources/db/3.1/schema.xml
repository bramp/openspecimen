<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

  <changeSet author="ckhilosiya" id="Freeze/thaw cycles field for specimen">
    <addColumn tableName="CATISSUE_SPECIMEN">
      <column name="FREEZE_THAW_CYCLES" type="${mediumint.type}"/>
    </addColumn>
  </changeSet>

  <changeSet author="ckhilosiya" id="When frozen event is created is freeze/thaw cycle of specimen incremented">
    <addColumn tableName="CATISSUE_FROZEN_EVENT_PARAM">
      <column name="INCREMENT_FREEZE_THAW" type="${boolean.type}" defaultValueBoolean="false"></column>
    </addColumn>
  </changeSet>

  <changeSet author="ckhilosiya" id="When thaw event is created is freeze/thaw cycle of specimen incremented">
    <addColumn tableName="CATISSUE_THAW_EVENT_PARAMETERS">
      <column name="INCREMENT_FREEZE_THAW" type="${boolean.type}" defaultValueBoolean="false"></column>
    </addColumn>
  </changeSet>
</databaseChangeLog>
