<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog 
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
  
  <changeSet author="vgaikwad" id="Audit specimen label print settings at CP level">
    <createTable tableName="OS_SPMN_LBL_PRINT_SETTINGS_AUD">
      <column name="IDENTIFIER" type="${int.type}">
        <constraints nullable="false"/>
      </column>
      
      <column name="REV" type="${int.type}">
        <constraints nullable="false"/>
      </column>
      
      <column name="REVTYPE" type="${smallint.type}"/>
      
      <column name="CP_ID" type="${int.type}"/>
      
      <column name="collectionProtocol_MOD" type="${bit.type}"/>
      
      <column name="LINEAGE" type="${text.type}(32)"/>
      
      <column name="lineage_MOD" type="${bit.type}"/>
      
      <column name="PRINT_MODE" type="${text.type}(32)"/>
      
      <column name="printMode_MOD" type="${bit.type}"/>
      
      <column name="COPIES" type="${int.type}"/>
      
      <column name="copies_MOD" type="${bit.type}"/>
    </createTable>
  </changeSet>
  
  <changeSet author="vgaikwad" id="Track chnages of print settings at CP level">
    <addColumn tableName="CAT_COLLECTION_PROTOCOL_AUD">
      <column name="spmnLabelPrintSettings_MOD" type="${bit.type}"/>
    </addColumn>
  </changeSet>
  
  <changeSet author="vgaikwad" id="Audit number of copies of specimen labels to print">
    <addColumn tableName="CATISSUE_CP_REQ_SPECIMEN_AUD">
      <column name="LABEL_PRINT_COPIES" type="${int.type}"/>
    </addColumn>
  </changeSet>

  <changeSet author="vgaikwad" id="Track changes of copies of specimen labels to print">
    <addColumn tableName="CATISSUE_CP_REQ_SPECIMEN_AUD">
      <column name="labelPrintCopies_MOD" type="${bit.type}"/>
    </addColumn>
  </changeSet>
  
  <changeSet author="mdnasim" id="Audit container types">
    <createTable tableName="OS_CONTAINER_TYPES_AUD">
      <column name="IDENTIFIER" type="${int.type}">
        <constraints nullable="false"/>
      </column>
      
      <column name="REV" type="${int.type}">
        <constraints nullable="false"/>
      </column>
      
      <column name="REVTYPE" type="${smallint.type}"/>
      
      <column name="NAME" type="${text.type}(64)"/>
      
      <column name="name_MOD" type="${bit.type}"/>
      
      <column name="TEMPERATURE" type="${double.type}"/>
      
      <column name="temperature_MOD" type="${bit.type}"/>
      
      <column name="NO_OF_COLS" type="${int.type}"/>
      
      <column name="noOfColumns_MOD" type="${bit.type}"/>
      
      <column name="NO_OF_ROWS" type="${int.type}"/>
      
      <column name="noOfRows_MOD" type="${bit.type}"/>
      
      <column name="COLUMN_LABELING_SCHEME" type="${text.type}(64)"/>
      
      <column name="columnLabelingScheme_MOD" type="${bit.type}"/>
      
      <column name="ROW_LABELING_SCHEME" type="${text.type}(64)"/>
      
      <column name="rowLabelingScheme_MOD" type="${bit.type}"/>
      
      <column name="STORE_SPECIMENS" type="${boolean.type}"/>
      
      <column name="storeSpecimenEnabled_MOD" type="${bit.type}"/>
      
      <column name="ABBREVIATION" type="${text.type}(64)"/>
      
      <column name="abbreviation_MOD" type="${bit.type}"/>
      
      <column name="CAN_HOLD" type="${int.type}"/>
      
      <column name="canHold_MOD" type="${bit.type}"/>
      
      <column name="ACTIVITY_STATUS" type="${text.type}(16)"/>
      
      <column name="activityStatus_MOD" type="${bit.type}"/>
    </createTable>
  </changeSet>
 </databaseChangeLog> 