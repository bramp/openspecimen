<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog 
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

  <changeSet author="slakhani" id="Remove not null constraint on phone number in catissue_user table">
    <dropNotNullConstraint 
      tableName="CATISSUE_USER" 
      columnName="PHONE_NUMBER" 
      columnDataType="${text.type}(63)"/>
  </changeSet>
  
  <changeSet author="slakhani" id="Remove unique constraint for site,mrn in catissue_part_medical_id table">
    <dropUniqueConstraint 
      tableName="CATISSUE_PART_MEDICAL_ID" 
      constraintName="MRN_SITE_UNIQUE"/>
  </changeSet>
  
  
  <changeSet author="mdnasim" id="Table to store storage container types">
    <createTable tableName="OS_STORAGE_CONTAINER_TYPES">
      <column name="IDENTIFIER" type="${int.type}" autoIncrement="${autoIncrement}">
        <constraints primaryKey="true" nullable="false"/>
      </column>

      <column name="NAME" type="${text.type}(64)">
        <constraints unique="true" nullable="false" />
      </column>

      <column name="TEMPERATURE" type="${double.type}">
      </column>
     
      <column name="NO_OF_COLS" type="${int.type}">
        <constraints nullable="false"/>
      </column>
     
      <column name="NO_OF_ROWS" type="${int.type}">
        <constraints nullable="false"/>
      </column>
     
      <column name="COLUMN_LABELING_SCHEME" type="${text.type}(64)" defaultValue="Numbers">
      </column>
     
      <column name="ROW_LABELING_SCHEME" type="${text.type}(64)" defaultValue="Numbers">
      </column>
      
      <column name="STORE_SPECIMENS" type="${boolean.type}" defaultValueBoolean="0">
        <constraints nullable="false"/>
      </column>
      
      <column name="ABBREVIATION" type="${text.type}(64)">
      </column>
      
      <column name="CAN_HOLD" type="${int.type}">
      </column>
    </createTable>
  </changeSet>
  
</databaseChangeLog>
